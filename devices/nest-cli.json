{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "watchAssets": false,
    "tsConfigPath": "tsconfig.build.json",
    "webpackConfigPath": "webpack.config.js",
    "assets": [
      "**/*.css",
      {
        "include": "**/*.html",
        "exclude": "**/devices.html",
        "watchAssets": false
      }
    ]
  },
  "generateOptions": {
    "spec": true,
    "flat": false
  }
}
